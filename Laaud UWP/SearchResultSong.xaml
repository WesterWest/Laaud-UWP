<UserControl
    x:Class="Laaud_UWP.SearchResultSong"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Laaud_UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="100"
    d:DesignWidth="400" CanDrag="True" DragStarting="UserControl_DragStarting">

    <Grid>
        <Image x:Name="SongImage" Width="80" HorizontalAlignment="Left" Margin="10,10,0,10" Loaded="SongImage_Loaded"/>
        <TextBlock Text="{Binding Title}" 
            Margin="100,10,10,53"
            FontSize="24" 
            FontStyle="Italic" 
            FontWeight="SemiBold"/>
        <TextBlock Text="{Binding Album.Name}" 
            Margin="100,52,10,0" Height="41" VerticalAlignment="Top" />
    </Grid>
</UserControl>
